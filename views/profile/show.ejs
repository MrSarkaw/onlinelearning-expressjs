<%- include('../layout/header.ejs') %>

<div class="flex flex-wrap mt-4 w-10/12 mx-auto">
     <div class="w-2/12 ">
        <%- include('../component/topic.ejs') %>
     </div>
     <div class="w-7/12 pl-5 text-xl">
        <div class="text-center text-white">
            <img style="background-image:url('{{ user.avatar.url }}')" class="w-20 h-20 mx-auto coverImg rounded-full" alt="">
            <p class="text-2xl mt-2"><%= profile.name %></p>
            <p class=" my-2"><%= profile.email %></p>
            <% if(isAuthenticated){ %>
                <% if(profile.id == user.id){ %>
                    <a href="/edit" class="px-4 border-2 border-cyan-500 text-cyan-500 rounded-full py-1 ">Edit Profile</a>
                <%}%>
            <%}%>
        </div>
        <div class="mt-10">
            <p class="text-sm mainColorText uppercase">ABOUT</p>
            <p class="text-white text-sm">bio</p>
        </div>
        <div class="mt-4">
            <p class="text-sm mainColorText uppercase">STUDY ROOMS HOSTED BY <%= profile.name %></p>
        </div>
        <%- include('../component/room.ejs') %>
     </div>
     <div class="w-3/12 pl-5">
        <%- include('../component/message.ejs') %>
      </div>
</div>

<%- include('../layout/footer.ejs') %>
