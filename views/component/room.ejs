<div class="grid gap-y-10 text-white mt-5">
    <% rooms.forEach(element=>{ %>
        <div class="rounded-xl mainColor p-3">
            <div class="flex text-gray-100/70 items-center justify-between">
                <div>
                    <a href="/profile/<%= element.user.dataValues.id %>" class="flex items-center space-x-3">
                        <img style="background-image:url('{{ i.host.avatar.url }}')" class="w-8 h-8 coverImg rounded-full" alt="">
                        <div class="text-sm">
                            <p>
                                <%=  element.user.dataValues.name %>
                            </p>
                        
                        </div>
                    </a>
                </div>
                <div>
                    <p class="text-xs">
                       <%=  moment(element.createdAt, "YYYYMMDD").fromNow() %>
                    </p>
                </div>
            </div>
            <a class="text-xl mt-4" href="room/show/<%= element.id %>"><%= element.title %></a>
            <p class=" text-gray-100/70 mt-5 text-sm pb-5 border-b border-gray-100/30">
                <%=  element.descreption %>
            </p>
            <div class="flex mt-4 text-sm text-gray-100/70 items-center justify-between">
                <div>
                    <p>
                        <i class="fas fa-users"></i>    <%=  element.particpanties.length %> joiend
                    </p>
                </div>
                <div class=" flex space-x-2">
                 
                    <p class="bg-gray-500 px-4 rounded-full py-1">
                        <%=  element.topic.dataValues.name %>
                    </p>
                </div>
            </div>

        </div>
    <%   })  %> 
</div>