<%- include('../layout/header.ejs') %>
    
    <div class="w-4/12 mx-auto">
        <% if(errorMessage){ %>
            <% errorMessage.forEach((element)=>{ %>
                <p class="text-center mt-3  text-white bg-red-700 rounded p-1"><%= element['param'] %>: <%= element['msg'] %></p>
            <% }) %>
        <% } %>
    </div>


    <form method="post"  action="<%=  typeof room != 'undefined'?'/room/update/'+room.id:'/room/create' %>">
        <input type="hidden" value="<%= csrf %>" name="_csrf">
        <div class=" flex mt-10 justify-center">
            <div class="w-5/12 rounded-lg text-white mainColor overflow-hidden">
                <div class="p-4 uppercase boxColor font-bold">
                   <button  onclick="window.history.back()" class="focus:outline-none"><i class="fas fa-arrow-left"></i></button> Form Room Create/update
                </div>
                <div class="py-10 px-5">
                    <div>
                        <p>Room Name</p>
                        <input value="<%= typeof room != 'undefined'?room.title:'' %>" class="bg-transparent p-2 w-full  focus:outline-none rounded border border-gray-100/20" type="text" name="title" id="">
    
                    </div>
                    <div class="mt-5">
                        Topic
                        <input type="text" value="<%= typeof room != 'undefined'?room.topic.dataValues.name:'' %>"  name="topicName" list="topic" class="bg-transparent p-2 w-full  focus:outline-none rounded border border-gray-100/20">
                        <datalist id="topic">
                            <select>
                                <% topic.forEach((element)=>{  %>
                                    <option  value="<%= element.name %>"></option>
                                <% })  %>
                            </select>
                        </datalist>                    
                    </div>
                    <div class="mt-5">
                        <p>Description</p>
                        <input value="<%= typeof room != 'undefined'?room.descreption:'' %>" class="bg-transparent p-2 w-full  focus:outline-none rounded border border-gray-100/20" type="text" name="descreption" id="">
    
                    </div>
    
                    <div class="text-right mt-10">
                        <button onclick="window.history.back()"  class="bg-gray-500 px-4 py-2 rounded  text-white mx-4">back</button>
                        <button  class="bg-cyan-500 px-4 py-2 rounded text-gray-700">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

<%- include('../layout/footer.ejs') %>